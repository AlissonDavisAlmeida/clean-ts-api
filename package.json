{
  "name": "main-project",
  "version": "1.0.0",
  "main": "index.js",
  "author": "alisson <alissoneatena1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "eslint": "eslint",
    "precommit": "lint-staged",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "start": "ts-node --transpiler sucrase/ts-node-plugin src/main/server.ts",
    "test:verbose": "jest --passWithNoTests",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "test:unit": "yarn test:verbose --watchAll -c jest-unit.config.ts",
    "test:integration": "yarn test --watchAll -c jest-integration.config.ts"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint  --fix",
      "yarn test:staged"
    ]
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.14",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "eslint": "^8.44.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "sucrase": "^3.34.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "fast-glob": "^3.3.1",
    "mongodb": "5.9.0",
    "validator": "^13.11.0"
  }
}
