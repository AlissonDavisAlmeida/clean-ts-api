{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "module": "commonjs",
        "target": "ES2019",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true
    },
    
    "exclude": [
        "node_modules",
        "./jest.config.ts",
        "./jest-unit.config.ts",
        "./jest-integration.config.ts",
        "./jest-mongodb-config.ts",
        "./jest-setup.ts",
        "./coverage"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
   
}